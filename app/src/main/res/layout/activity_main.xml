<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    tools:context="com.forkboard.forkboard.MainActivity"
    android:background="@color/primary_dark">

    <include layout="@layout/my_toolbar"
        android:id="@+id/my_toolbar" />

    <ImageView android:src="@drawable/fork"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true" />

    <TextView android:text="Welcome" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:id="@+id/buttonToInfo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:onClick="changeActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:id="@+id/buttonToCalendar"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonToInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:onClick="changeActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping List"
        android:id="@+id/buttonToShopping"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonToCalendar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:onClick="changeActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CookBook"
        android:id="@+id/buttonToCookbook"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonToShopping"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:onClick="changeActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversion Calculator"
        android:id="@+id/buttonToCalc"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonToCookbook"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:onClick="changeActivity" />

</RelativeLayout>
