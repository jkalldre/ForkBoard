<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.forkboard.forkboard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Calendar_View"
            android:screenOrientation="portrait" />
        <activity android:name=".Day_View" />
        <activity
            android:name=".Cookbook"
            android:screenOrientation="portrait" />

        <!-- STUFF JANINE ADDED -->
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".Conversion_Calculator" />
        <activity android:name=".Recipe_Input" />
        <activity android:name=".Cookbook_Selecter"></activity>
    </application>

</manifest>